<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBgWeatherActivityDay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/detailCardTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:id="@+id/detailCardIcon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailCardTemp"
                android:layout_toLeftOf="@id/detailCardIcon"
                android:layout_below="@id/detailCardTime"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>